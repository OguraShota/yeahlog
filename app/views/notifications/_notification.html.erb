<% user = User.find(notification.from_user_id) %>
<% property= Property.find(notification.property_id) %>
<li id="notification-<%= notification.id %>" >
  <div>
    <% if notification.variety == 1 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message">あなたの物件が<%= link_to user.name, user_path(user) %>さんにお気に入り登録されました。</p>
    <% elsif notification.variety == 2 %>
      <p><%= notification.created_at.strftime("%Y/%m/%d(%a) %H:%M") %></p>
      <p class="notification-message">あなたの物件に<%= link_to user.name, user_path(user) %>さんがコメントしました。
      「<%= notification.content %>」</p>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= link_to((image_tag property.picture.url), property_path(property), class: 'property-picture') %>
    </div>
    <div class="col-md-7">
      <p><%= link_to property.name, property_path(property) %></p>
      <p><%= property.description %>
    </div>
  </div>
</li>