<%= form_with model: @property, local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class = 'form-group'>
    <%= f.label :name %>　<span class="input-need">※必須</span>
    <%= f.text_field :name, class: 'form-control', id: 'property_name' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :description %>　<span class="input-unneed">※任意</span>
    <%= f.text_field :description, size: "60x4", class: 'form-control', id: 'property_description' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :reference %>　<span class="input-unneed">※任意</span>
    <%= f.text_field :reference, class: 'form-control', id: 'property_reference' %>
  </div>
  <div class = 'form-group'>
    <%= f.label :recommend %> [1~5]　<span class="input-unneed">※任意</span>
    <%= f.text_field :recommend, class: 'form-control', id: 'property_recommend' %>
  </div>
  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>
