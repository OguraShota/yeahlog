<% provide(:title, "物件情報の編集") %>
<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@property) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <span class="picture">
          <%= f.label :picture %> <span class="input-unneed">*任意</span>
          <%= f.file_field :picture, accept: 'image/jpeg,image/png', class: 'form-control', id: 'dish-picture' %>
          <%= image_tag(@property.picture.thumb400.url) if @property.picture.url.present? %>
        </span>
        </p>
        <div class = 'form-group'>
          <%= f.label :name %>　<span class="input-need">※必須</span>
          <%= f.text_field :name, class: 'form-control', id: 'property_name' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :description %>　<span class="input-unneed">※任意</span>
          <%= f.text_field :description, size: "60x4", class: 'form-control', id: 'property_description' %>
        </div>
        <div class = 'form-group'>
          <%= f.label :reference %>　<span class="input-unneed">※任意</span>
          <%= f.text_field :reference, class: 'form-control', id: 'property_reference' %>
        </div>        
        <div class = 'form-group'>
          <%= f.label :recommend %> [1~5]　<span class="input-unneed">※任意</span>
          <%= f.text_field :recommend, class: 'form-control', id: 'property_recommend' %>
        </div>
        <%= f.submit "更新する", class: "btn btn-primary" %>
        <p></p>
        <%= link_to "物件を削除する", property_path(@property), method: :delete,
                                     data: { confirm: "本当にこの物件を削除してよろしいですか？" } %>
      <% end %>
    </div>
  </div>
</div>
